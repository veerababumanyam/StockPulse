{
  "name": "stockpulse",
  "version": "0.2.4",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite",
    "start": "vite --port 3001",
    "build": "tsc && vite build",
    "build:themes": "node scripts/theme-build-optimizer.js",
    "validate:themes": "node scripts/theme-build-optimizer.js --validate-only",
    "optimize:themes": "node scripts/theme-build-optimizer.js --optimize-only",
    "build:all": "npm run build:themes && npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:theme-integration": "playwright test scripts/testing/theme-integration-test.js",
    "test:theme-visual": "playwright test --config=playwright.theme.config.ts",
    "test:theme-performance": "playwright test scripts/testing/theme-integration-test.js --grep \"Theme Performance\"",
    "test:theme-accessibility": "playwright test scripts/testing/theme-integration-test.js --grep \"Accessibility\"",
    "test:all-themes": "npm run test:theme-integration && npm run test:theme-visual && npm run test:theme-performance",
    "dev:backend": "cd services/backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start:backend": "cd services/backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "test:backend": "cd services/backend && python -m pytest",
    "lint:backend": "cd services/backend && python -m flake8 app/",
    "test:mcp": "cd tests/story-1.2 && python -m pytest",
    "test:widgets": "cd tests/story-2.2 && npm test",
    "backend:install": "cd services/backend && pip install -r requirements.txt",
    "backend:install-dev": "cd services/backend && pip install -r requirements.txt -r requirements-dev.txt",
    "backend:lint": "cd services/backend && black . && isort . && flake8 .",
    "backend:type-check": "cd services/backend && mypy app/",
    "backend:security": "cd services/backend && bandit -r app/ && safety check",
    "quality:all": "npm run lint && npm run type-check && npm run backend:lint && npm run backend:type-check",
    "test:widget-persistence": "node scripts/test-widget-persistence.js",
    "theme:validate": "node scripts/testing/theme-validation.js",
    "theme:benchmark": "node scripts/testing/theme-performance-benchmark.js",
    "theme:export-all": "node scripts/testing/theme-export-utility.js",
    "precommit:theme": "npm run theme:validate && npm run test:theme-integration",
    "deploy:verify-themes": "npm run test:all-themes && npm run theme:validate",
    "test:watchlist": "node tests/run-watchlist-tests.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.8",
    "@tanstack/react-query": "^5.17.19",
    "@types/react-grid-layout": "^1.3.5",
    "@types/react-resizable": "^3.0.8",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.4.4",
    "react-hook-form": "^7.50.1",
    "react-resizable": "^3.0.5",
    "react-router-dom": "^6.22.1",
    "reactflow": "^11.11.4",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.57",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^6.0.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^3.1.4"
  }
}